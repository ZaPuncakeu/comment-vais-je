<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Section2Question4">

    <Button
        android:id="@+id/section_2_question_4_next_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@color/logo_color"
        android:text="@string/global_next"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personal_progress_bar12" />

    <Button
        android:id="@+id/section_2_question_4_previous_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:background="@color/logo_color"
        android:text="@string/global_previous"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/section_2_question_4_next_button"
        app:layout_constraintStart_toStartOf="@+id/personal_progress_bar12"
        app:layout_constraintTop_toTopOf="@+id/section_2_question_4_next_button" />

    <TextView
        android:id="@+id/section_2_question_4_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/section_2_question_4_screen_title"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_progress_bar12" />

    <ProgressBar
        android:id="@+id/personal_progress_bar12"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/redprogressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/drink_radio_group"
        android:layout_width="519dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_2_question_4_title_text_view">

        <RadioButton
            android:id="@+id/global_no_question4"
            android:layout_width="148dp"
            android:layout_height="87dp"
            android:text="@string/global_no"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/global_occasionally_question3"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:text="@string/global_occasionally"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/global_all_the_time_question4"
            android:layout_width="163dp"
            android:layout_height="90dp"
            android:text="@string/global_all_the_time"
            android:textSize="20sp" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>