<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Section1Question3">

    <Button
        android:id="@+id/section_1_question_3_next_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@color/logo_color"
        android:text="@string/global_next"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personal_progress_bar5" />

    <Button
        android:id="@+id/section_1_question_3_previous_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:background="@color/logo_color"
        android:text="@string/global_previous"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/section_1_question_1_next_button"
        app:layout_constraintStart_toStartOf="@+id/personal_progress_bar5"
        app:layout_constraintTop_toTopOf="@id/section_1_question_3_next_button" />

    <TextView
        android:id="@+id/section1_question3_title_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/section_1_question_3_screen_title"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_progress_bar5" />

    <ProgressBar
        android:id="@+id/personal_progress_bar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/redprogressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/personal_feeling_radio_group"
        android:layout_width="681dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:measureWithLargestChild="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section1_question3_title_text_view3">

        <RadioButton
            android:id="@+id/global_not_much"
            android:layout_width="182dp"
            android:layout_height="85dp"
            android:layout_marginHorizontal="15dp"
            android:minHeight="48dp"
            android:text="@string/global_not_much"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/global_pretty_often"
            android:layout_width="178dp"
            android:layout_height="91dp"
            android:layout_marginHorizontal="15dp"
            android:minHeight="48dp"
            android:text="@string/global_pretty_often"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/global_all_the_time"
            android:layout_width="189dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="15dp"
            android:elegantTextHeight="false"
            android:minHeight="48dp"
            android:text="@string/global_all_the_time"
            android:textSize="24sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>