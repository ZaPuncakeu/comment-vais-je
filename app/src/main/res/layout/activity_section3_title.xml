<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Section3Title">

    <ProgressBar
        android:id="@+id/section3_title_screen_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/redprogressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/section3_title_screen_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/section3_title_screen_title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/section3_title_screen_previous_btn"
        app:layout_constraintEnd_toEndOf="@+id/section3_title_screen_pb"
        app:layout_constraintStart_toStartOf="@+id/section3_title_screen_pb"
        app:layout_constraintTop_toBottomOf="@+id/section3_title_screen_pb" />

    <Button
        android:id="@+id/section3_title_screen_next_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@color/logo_color"
        android:text="@string/global_next"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/section3_title_screen_pb" />

    <Button
        android:id="@+id/section3_title_screen_previous_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:background="@color/logo_color"
        android:text="@string/global_previous"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/section3_title_screen_next_btn"
        app:layout_constraintStart_toStartOf="@+id/section3_title_screen_pb"
        app:layout_constraintTop_toTopOf="@+id/section3_title_screen_next_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>