<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Section1Question2">

    <ProgressBar
        android:id="@+id/personal_progress_bar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/redprogressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/section1_question2_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/section_1_question_1"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/personal_progress_bar4"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/personal_progress_bar4"
        app:layout_constraintTop_toBottomOf="@+id/personal_progress_bar4" />

    <Button
        android:id="@+id/section_1_question_2_previous_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:background="@color/logo_color"
        android:text="@string/global_previous"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/section_1_question_1_next_button"
        app:layout_constraintStart_toStartOf="@+id/personal_progress_bar4"
        app:layout_constraintTop_toTopOf="@+id/section_1_question_2_next_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/section_1_question_2_next_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@color/logo_color"
        android:text="@string/global_next"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personal_progress_bar4" />

    <SeekBar
        android:id="@+id/section_1_question_2_stress_level_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/section_1_question_2_next_button"
        app:layout_constraintEnd_toStartOf="@+id/section_1_question_2_extreamly_stressed_text_view"
        app:layout_constraintStart_toEndOf="@+id/section_1_question_2_not_stressed_text_view"
        app:layout_constraintTop_toBottomOf="@+id/section1_question2_title_text_view" />

    <TextView
        android:id="@+id/section_1_question_2_extreamly_stressed_text_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/section_1_question_2_screen_extreamly_stressed"
        app:layout_constraintBottom_toBottomOf="@+id/section_1_question_2_stress_level_slider"
        app:layout_constraintEnd_toEndOf="@+id/section1_question2_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/section_1_question_2_stress_level_slider"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/section_1_question_2_not_stressed_text_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/section_1_question_2_screen_not_stressed"
        app:layout_constraintBottom_toBottomOf="@+id/section_1_question_2_stress_level_slider"
        app:layout_constraintStart_toStartOf="@+id/section1_question2_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/section_1_question_2_stress_level_slider" />
</androidx.constraintlayout.widget.ConstraintLayout>